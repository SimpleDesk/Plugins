	<id>SimpleDeskTeam:tally</id>
	<name>Tally</name>
	<version>1.0</version>
	<type>sdplugin</type>
	<install for="2.0">
		<require-file name="SDPluginTally.english.php" destination="$languagedir" />
		<require-dir name="tally" destination="$sourcedir/sd_plugins_source" />
		
